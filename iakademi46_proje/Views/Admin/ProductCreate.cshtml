@model Product

@{
    ViewData["Title"] = "ProductCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- BEGIN SAMPLE FORM PORTLET-->

<div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> ÜRÜN GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/ProductCreate" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="ProductName"></label>
                            <div class="col-md-9">
                                <input asp-for="ProductName" class="form-control input-lg" placeholder="Ürün Adı" required maxlength="100" />
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="UnitPrice"></label>
                            <div class="col-md-9">
                                <input asp-for="UnitPrice" class="form-control input-lg" placeholder="Fiyat" required />
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">Kategori Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewData["categoryList"], "Seçiniz", new { @class = "form-control input-lg", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Marka Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("SupplierID", (IEnumerable<SelectListItem>)ViewData["supplierList"], "Seçiniz", new { @class = "form-control input-lg", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Stock"></label>
                            <div class="col-md-9">
                                <input asp-for="Stock" class="form-control input-lg" placeholder="Stok" required />
                            </div>
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Discount"></label>
                            <div class="col-md-9">
                                <input asp-for="Discount" class="form-control input-lg" placeholder="İndirim" required />
                            </div>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Statü Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("StatusID", (IEnumerable<SelectListItem>)ViewData["statusList"], "Seçiniz", new { @class = "form-control input-lg", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Keywords"></label>
                            <div class="col-md-9">
                                <input asp-for="Keywords" class="form-control input-lg" placeholder="Anahtar Kelime" required />
                            </div>
                            <span asp-validation-for="Keywords" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Kdv"></label>
                            <div class="col-md-9">
                                <input asp-for="Kdv" class="form-control input-lg" placeholder="Kdv" required />
                            </div>
                            <span asp-validation-for="Kdv" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Related">Buna Bakanlar</label>
                            <div class="col-md-9">
                                <input asp-for="Related" class="form-control input-lg" placeholder="Buna Bakanlar" required />
                            </div>
                            <span asp-validation-for="Related" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Notes"></label>
                            <div class="col-md-9">
                                <input asp-for="Notes" class="form-control input-lg" placeholder="Notlar" />
                            </div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhotoPath" class="col-md-3 control-label">RESİM SEÇİNİZ</label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg" required />
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Active"></label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg">
                            </div>
                        </div>

                    </div>
                    <div class="form-actions right1">
                        <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
                        <input type="submit" value="KAYDET" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->

    </div>
</div>

